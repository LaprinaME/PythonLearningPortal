@model PythonLearningPortal.ViewModels.AddSubtopicViewModel

@{
    ViewData["Title"] = "Добавление новой подтемы";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="@Url.Content("~/css/addtopic.css")">
</head>
<body style="background-image: url('/images/image.jpg');">
    <h1 style="color: #333;">@ViewData["Title"]</h1>
    <div class="addtopic-container" style="color: #333;">
    <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="TopicId" class="control-label">Код темы:</label>
                    <input asp-for="TopicId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SubtopicId" class="control-label">Код подтемы:</label>
                    <input asp-for="SubtopicId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SubtopicName" class="control-label">Название подтемы:</label>
                    <input asp-for="SubtopicName" class="form-control" />
                    <span asp-validation-for="SubtopicName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>
</body>
