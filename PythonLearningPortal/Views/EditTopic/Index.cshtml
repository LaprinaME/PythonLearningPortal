@model PythonLearningPortal.ViewModels.EditTopicViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: "Comic Sans MS", cursive, sans-serif;
            background-image: url('/images/notebook.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background: linear-gradient(135deg, #E6E6FA, #B4C7E7, #AFDAFC, #99FF99, #C6DF90, #BEBD7F);
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            font-weight: bold;
            color: #333;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            background-color: #AFDAFC;
            color: #333;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn:hover {
                background-color: #E6E6FA;
                color: #000;
            }
    </style>
</head>
<body style="background-image: url('/images/notebook.jpg');">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TopicCode" class="control-label">Код темы</label>
                    <input asp-for="TopicCode" class="form-control" />
                    <span asp-validation-for="TopicCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameTopic" class="control-label">Название темы</label>
                    <input asp-for="NameTopic" class="form-control" />
                    <span asp-validation-for="NameTopic" class="text-danger"></span>
                </div>
            <div class="btn-container">
                <button type="submit" class="btn">Сохранить</button>
            </div>
        </form>
    </div>
</body>
</html>
