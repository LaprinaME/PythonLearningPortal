@model List<PythonLearningPortal.Models.Тесты>

@{
    ViewData["Title"] = "Список тестов";
}

<style>
    body {
        background: linear-gradient(135deg, #D4145A, #FBB03B, #FFB20F, #FFD271);
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #fff;
        text-align: center;
        padding: 20px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border: 5px solid #fff;
        border-radius: 10px;
    }

    th, td {
        padding: 10px;
        text-align: center;
        cursor: pointer; /* Указатель мыши при наведении на строки */
    }

    thead {
        background-color: #fff;
        color: #333;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #ddd;
    }

    .search-container {
        text-align: center;
        margin-bottom: 20px;
    }

        .search-container input {
            padding: 5px;
            width: 300px;
        }

        .search-container button {
            padding: 5px 10px;
        }

    .sort-links {
        text-align: center;
        margin-bottom: 20px;
    }

        .sort-links a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

    header {
        background: linear-gradient(135deg, #FFC0CB, #FFD700, #90EE90, #87CEFA, #9370DB, #FFA07A, #FA8072);
        color: #fff;
        text-align: center;
        padding: 20px 0;
    }

    .header-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .button-container {
        text-align: center;
        width: 150px;
        height: 40px;
    }

    .return-button {
        padding: 8px 16px;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #FFC0CB, #FFD700, #90EE90, #87CEFA, #9370DB, #FFA07A, #FA8072);
        color: #fff;
        border: 2px solid #555;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.5s;
    }

        .return-button:hover {
            background-size: 400% 400%;
        }

    footer {
        background: linear-gradient(135deg, #FFB6C1, #FFD700, #C0C0C0, #ADD8E6);
        color: #fff;
        text-align: center;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .header-buttons form {
        display: inline-block;
        margin: 0;
    }

    /* Модальное окно */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        border-radius: 10px;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

@section Header {
    <header>
        <h1>Учебник Python</h1>
        <div class="header-buttons">
            <div class="button-container">
                <form method="get" action="/Home/Index">
                    <button type="submit" class="return-button">Вернуться на главную</button>
                </form>
            </div>
            <div class="button-container">
                <form method="get" action="/MenuAdmin/Index">
                    <button type="submit" class="return-button">Вернуться в меню администратора</button>
                </form>
            </div>
        </div>
    </header>
}

<h1>@ViewData["Title"]</h1>

<div class="search-container">
    <form asp-action="Index" method="get">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Поиск по названию теста" />
        <button type="submit">Поиск</button>
    </form>
</div>

<div class="sort-links">
    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Сортировка по названию</a>
    <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]">Сортировка по коду</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Код теста</th>
            <th>Название теста</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            <tr class="test-row" data-id="@test.Код_теста" data-name="@test.Название_теста">
                <td>@test.Код_теста</td>
                <td>@test.Название_теста</td>
            </tr>
        }
    </tbody>
</table>

<!-- Модальное окно -->
<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modal-title"></h2>
        <p id="modal-code"></p>
    </div>
</div>

@section Footer {
    <footer>
        <p>&copy; 2024 Учебник Python. Все права защищены.</p>
    </footer>
}

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const rows = document.querySelectorAll('.test-row');
        const modal = document.getElementById('myModal');
        const modalTitle = document.getElementById('modal-title');
        const modalCode = document.getElementById('modal-code');
        const span = document.getElementsByClassName('close')[0];

        rows.forEach(row => {
            row.addEventListener('click', () => {
                const name = row.getAttribute('data-name');
                const code = row.getAttribute('data-id');

                modalTitle.textContent = "Название теста: " + name;
                modalCode.textContent = "Код теста: " + code;

                modal.style.display = 'block';
            });
        });

        span.onclick = () => {
            modal.style.display = 'none';
        }

        window.onclick = (event) => {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
    });
</script>
