@model PythonLearningPortal.ViewModels.AddTopicViewModel

@{
    ViewData["Title"] = "Добавление новой темы";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="@Url.Content("~/css/addtopic.css")">
</head>
<body style="background-image: url('/images/image.jpg');">
    <h1>Добавление новой темы</h1>
    <div class="addtopic-container">
        <div class="col-md-4">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TopicCode" class="control-label">Код темы</label>
                    <input asp-for="TopicCode" class="form-control" />
                    <span asp-validation-for="TopicCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameTopic" class="control-label">Название темы</label>
                    <input asp-for="NameTopic" class="form-control" />
                    <span asp-validation-for="NameTopic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
