@model PythonLearningPortal.Models.Подтемы

@{
    ViewData["Title"] = "Подробности подтемы";
}

<h1>Подробности подтемы</h1>

<div>
    <h4>Подтемы</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название подтемы
        </dt>
        <dd class="col-sm-10">
            @Model.Название_подтемы
        </dd>
        <dt class="col-sm-2">
            Название темы
        </dt>
        <dd class="col-sm-10">
            @Model.Темы?.Название_темы
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Код_подтемы" class="btn btn-secondary">Редактировать</a> |
    <a asp-action="Index" class="btn btn-primary">Вернуться к списку</a>
</div>
