@model PythonLearningPortal.Models.Подтемы

@{
    ViewData["Title"] = "Удалить подтему";
}

<h1>Удалить подтему</h1>

<h4>Подтемы</h4>
<hr />
<div>
    <h4>Вы уверены, что хотите удалить эту подтему?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Название подтемы
        </dt>
        <dd class="col-sm-10">
            @Model.Название_подтемы
        </dd>
        <dt class="col-sm-2">
            Название темы
        </dt>
        <dd class="col-sm-10">
            @Model.Темы?.Название_темы
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Код_подтемы" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Вернуться к списку</a>
    </form>
</div>
