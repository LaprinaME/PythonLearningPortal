@model PythonLearningPortal.Models.Подтемы

@{
    ViewData["Title"] = "Редактировать подтему";
}

<h1>Редактировать подтему</h1>

<h4>Подтемы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Код_подтемы" />
            <div class="form-group">
                <label asp-for="Название_подтемы" class="control-label"></label>
                <input asp-for="Название_подтемы" class="form-control" />
                <span asp-validation-for="Название_подтемы" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Код_темы" class="control-label"></label>
                <select asp-for="Код_темы" class="form-control" asp-items="ViewBag.Код_темы"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Вернуться к списку</a>
</div>


